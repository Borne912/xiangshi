.bg_2{
  background: #FFF2E8;
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:-1;
}

.head {
  margin-top: 20rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  /* background-color: blue; */
}

.block1 {
    font-weight: bold;
    font-size: 38rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    margin-left: 40rpx;
}
.block2 {
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  right: 90rpx;
  margin-left: 40rpx;

}
.each {
  margin-left: 20rpx;
  text-align: center;
  height: 40rpx;
  width: 80rpx;
  border-radius: 30rpx;
}
.speed {
  background-color: white;
  height: 250rpx;
  margin-left: 55rpx;
  margin-right: 55rpx;
  border-radius: 30rpx;
}
/* 一整行 */
.everyrow {
  top: 20rpx;
  display: flex;
  flex-direction: row;
}

/* 行中的每一列 */
.row-cols {
  text-align: center;
  background-color:#B8ECB2;
  margin-right: 30rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 30rpx;
}
.quick {
  background-color:#B8ECB2;
  border-radius: 30rpx;
}
.mid  {
  background-color:#FFDB7A;
  border-radius: 30rpx;
}
.slow {
  background-color:#FF867A;
  border-radius: 30rpx;
}

.buttons_cols {
  margin-left: 30rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  /* background-color: white; */
}

