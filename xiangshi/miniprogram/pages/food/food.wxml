<!--miniprogram/pages/food/food.wxml-->
<view class="container container-food">
	<view class="cover">
		<view class="navigation">
			<navigator url="../location/location">
				<view class="navigt-content">
					<view>
						<image src="../../images/location.svg" class="navigt-image"></image>
					</view>
					<view>
						<text class="navigt-font">{{loc}}</text>
						<!-- <text class="navigt-font">{{location}}</text> -->
					</view>
				</view>
			</navigator>
		</view>
		<view class="search" bindtap="searchJump">
			<!-- <input class="search-input">
			</input> -->
			<view class="serch-wrapper">
				<view class="search-input">
				</view>
				<view class="search_icon1">
					<image src="../../images/search.svg" class="search-search-image"></image>
				</view>
				<view class="search_icon2">
					<image src="../../images/microphone.svg" class="search-listen-image"></image>
				</view>
			</view>
		</view>
		<view class="font_recommend">
			<view class="fr fr1">{{font_recommend[0].name}}</view>
			<view class="fr fr2">{{font_recommend[1].name}}</view>
			<view class="fr fr3">{{font_recommend[2].name}}</view>
			<view class="fr fr4">{{font_recommend[3].name}}</view>
		</view>
		<view class="catalog">
			<view class="label-wrapper">
				<view class="ctl-font">
					<view class="label-content">
						<text>堂食</text>
					</view>
				</view >
				<view class="ctl-font">
					<view class="label-content">
						<text>打包</text>
					</view>
				</view>
			</view>
			<view class="items-wrapper">
				<block wx:for="{{tangshi}}"> 
					<view class="ctl-elem" bindtap="selectFloor" data-id="{{index+1}}">
						<image class="ctl-image" src="{{item.imgurl}}"></image>
						<text class="image-font">{{item.name}}</text>
					</view>
				</block>
				<block wx:for="{{takeout}}">
					<view class="ctl-elem" bindtap="Change_takeout_food" data-id="{{index+1}}">
						<view>
							<image class="ctl-image" src="{{item.imgurl}}"></image>
						</view>
						<view>
							<text class="image-font">{{item.name}}</text>
						</view>
					</view>
				</block>
			</view>
		</view>
		<view class="rolling_window">
			<scroll-view class="rw-scroll" scroll-x="true">
				<view class="rw-elem elem1">
					<view class="rw-elem-tag">
						<text class="rw-elem-tag-font">明星菜品</text>
					</view>
					<view class="rw-elem-elem">
						<!-- 明星菜品 -->
						<view class="rw-elem-image-div elem-image1" bindtap="selectFood" data-id="{{stars_dishes[0].name}}">
							<image class="rw-elem-image" src="{{stars_dishes[0].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{stars_dishes[0].name}}</view>
							<view class="rw-elem-image-font2">¥{{stars_dishes[0].price}}</view>
						</view>
						<view class="rw-elem-image-div elem-image2" bindtap="selectFood" data-id="{{stars_dishes[1].name}}">
							<image class="rw-elem-image" src="{{stars_dishes[1].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{stars_dishes[1].name}}</view>
							<view class="rw-elem-image-font2">¥{{stars_dishes[1].price}}</view>
						</view>
					</view>
				</view>
				<view class="rw-elem elem2">
					<view class="rw-elem-tag">
						<text class="rw-elem-tag-font">超值特惠</text>
					</view>
					<view class="rw-elem-elem">
						<!-- 超值特惠 -->
						<view class="rw-elem-image-div elem-image1" bindtap="selectFood" data-id="{{chaozhi_dishes[0].name}}">
							<image class="rw-elem-image" src="{{chaozhi_dishes[0].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{chaozhi_dishes[0].name}}</view>
							<view class="rw-elem-image-font2">¥{{chaozhi_dishes[0].price}}</view>
						</view>
						<view class="rw-elem-image-div elem-image2" bindtap="selectFood" data-id="{{chaozhi_dishes[1].name}}">
							<image class="rw-elem-image" src="{{chaozhi_dishes[1].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{chaozhi_dishes[1].name}}</view>
							<view class="rw-elem-image-font2">¥{{chaozhi_dishes[1].price}}</view>
						</view>
					</view>
				</view>
				<view class="rw-elem elem3">
					<view class="rw-elem-tag">
						<text class="rw-elem-tag-font">新上菜品</text>
					</view>
					<view class="rw-elem-elem">
						<!-- 新上菜品 -->
						<view class="rw-elem-image-div elem-image1" bindtap="selectFood" data-id="{{new_dishes[0].name}}">
							<image class="rw-elem-image" src="{{new_dishes[0].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{new_dishes[0].name}}</view>
							<view class="rw-elem-image-font2">¥{{new_dishes[0].price}}</view>
						</view>
						<view class="rw-elem-image-div elem-image2" bindtap="selectFood" data-id="{{new_dishes[1].name}}">
							<image class="rw-elem-image" src="{{new_dishes[1].imgurl}}"></image>
							<view class="rw-elem-image-font1">{{new_dishes[1].name}}</view>
							<view class="rw-elem-image-font2">¥{{new_dishes[1].price}}</view>
						</view>
					</view>
				</view>
			</scroll-view>
		</view>
