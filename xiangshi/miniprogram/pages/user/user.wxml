<view class="container ">
  <view class="">

    <view class="bg_3"></view>
    <!-- 搜索 -->
    <view class="navigation">
      <view class="search">
        <view class="input-wrapper" style="position: relative; left: -46rpx; top: 19rpx">
          <input class="search-input" placeholder="在其主页搜索" bindinput="dishInput"></input>
        </view>
        <image src="../../images/search.svg" class="search-search-image" bindtap="searchTap"
          style="position: absolute; left: 136rpx; top: 70rpx"></image>
        <image src="../../images/microphone.svg" class="search-listen-image"
          style="position: absolute; left: 483rpx; top: 73rpx"></image>
      </view>
    </view>

    <!-- 头像资料 -->
    <view style="width:100%;height:300rpx">

      <view class="img" style="background-image: url(../../../../images/avatar.png); position: absolute; left: 43rpx; top: 169rpx"></view>
      <view class="font1" style="position: absolute; left: 216rpx; top: 174rpx">小助手</view>
      <view class="font2" style="position: absolute; left: 223rpx; top: 263rpx">Lv9</view>
      <view class="font3" style="position: absolute; left: 331rpx; top: 263rpx">男</view>
      <view class="font4" style="position: absolute; left: 216rpx; top: 312rpx">共同好友数量：34</view>
    </view>
      <view class="btn1" style="position: absolute; left: 528rpx; top: 181rpx">+关注</view>
      <view class="btn2" style="background-image: url(../../../../images/comment.svg); position: absolute; left: 528rpx; top: 251rpx; background-repeat: no-repeat; background:center">
      </view>
      <view class="fnt1" style="position: absolute; left: 24rpx; top: 388rpx">0</view>
      <view class="fnt11" style="position: absolute; left: 42rpx; top: 388rpx">关注</view>
      <view class="fnt2" style="position: absolute; left: 134rpx; top: 388rpx">80</view>
      <view class="fnt22" style="position: absolute; left: 222rpx; top: 393rpx">浏览量</view>
      <view class="fnt3" style="position: absolute; left: 415rpx; top: 388rpx">900</view>
      <view class="fnt33" style="position: absolute; left: 483rpx; top: 388rpx">获赞</view>
      <view class="fnt4" style="position: absolute; left: 594rpx; top: 388rpx">80</view>
      <view class="fnt44" style="position: absolute; left: 652rpx; top: 388rpx">粉丝</view>
  

    <!-- 分割线 -->

    <view class="divLine"></view>

    <!-- 分页 -->
    <scroll-view scroll-x class="bg-white nav">
      <view class="flex text-center" style="background-color:#FFF2E8">
        <view class="cu-item flex-sub {{0==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="{{0}}">
          <text class="text-bold  text-lg">动态</text>
        </view>
        <view class="cu-item flex-sub {{1==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="{{1}}">
          <text class="text-bold  text-lg">评价{{pingjia}}</text>
        </view>
        <view class="cu-item flex-sub {{2==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="{{2}}">
          <text class="text-bold  text-lg">攻略{{gonglue}}</text>
        </view>
        <view class="cu-item flex-sub {{3==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="{{3}}">
          <text class="text-bold  text-lg">相册{{xiangce}}</text>
        </view>
      </view>
    </scroll-view>

    <!-- 卡片 -->
    <view>
      <scroll-view class="hot-box" scroll-y="true" upper-threshold="50" lower-threshold="100"
        bindscrolltolower="scrolltolower" style="height:100%">


        <view class="hot-box-main WxMasonryView" style="background-color:#FFF2E8">
          <!-- <block wx:for="{{datalist}}" wx:for-item="item" wx:for-index="i" wx:key=""> -->
          <!-- <view class="hot-box-top">
                        <text class="hot-box-title">{{datalist[i].dateDay}}</text>
                    </view> -->
          <view class="WxMasonry radius" wx:for="{{datalist}}" wx:for-index="j" wx:for-item="items" wx:key="">
            <navigator id="{{datalist[j].id}}" url="../detail/detail?id={{datalist[j].id}}">
              <image class="WxMasonryImage" id="{{j}}"
                style="width:{{imagesHeightList[j].width}}px;height:{{imagesHeightList[j].height}}px" mode="aspectFill"
                bindload="WxMasonryImageLoad" src="{{datalist[j].images}}" />
              <view class="list-box-title">{{datalist[j].title}}</view>
              <!-- 头像昵称点赞 -->
              <view class="cu-list menu-avatar">
                <view class="cu-item"
                  style="width: 347rpx; height: 50rpx; display: flex; box-sizing: border-box; position: ; left: 0rpx; top: 3rpx">
                  <view class="cu-avatar round sm"
                    style="background-image: url({{datalist[j].avatar}}); position: absolute; left: 0rpx; top: -2rpx">
                  </view>
                  <view class="content flex-sub">
                    <!-- <view class="text-grey">昵称</view> -->
                    <view class="text-gray text-sm flex justify-between"
                      style="width: 272rpx; height: 43rpx; display: flex; box-sizing: border-box; position: relative; left: -85rpx; top: -3rpx">
                      {{datalist[j].username}}
                      <view class="text-gray text-sm">
                        <!-- <text class="cuIcon-attentionfill margin-lr-xs"></text> 10 -->
                        <text class="cuIcon-appreciatefill margin-lr-xs"></text> {{datalist[j].count}}
                        <!-- <text class="cuIcon-messagefill margin-lr-xs"></text> 30 -->
                        <!-- <button class="cu-btn round line-orange" style="margin-left:10rpx">关注</button> -->
                      </view>
                    </view>
                  </view>
                </view>
              </view>
            </navigator>
          </view>
          <!-- </block> -->
        </view>



        <view hidden="{{hotshidden}}" class=" solids-bottom padding-xs flex align-center justify-center">
          <view wx:if="{{hothidden}}">
            <image src="/static/loading.gif" mode="aspectFill" />
          </view>
          <view class=" flex solid-bottom text-xl padding justify-center" wx:else>
            <text class="text-black text-bold "> 没有更多了 </text>
          </view>
        </view>

      </scroll-view>
    </view>
  </view>
</view>