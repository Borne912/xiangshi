/* 背景 #FFF2E8 */
.bg_3{
  background: #FFF2E8;
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:-1;
}

.img {
  width: 100%;
  height: 305rpx;
}
.head {
  /* height: 320rpx; */
  height: auto;
  margin-top: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx; 

  /* background-color: yellowgreen; */
}

.btn {
  background:#FFA155;
  /* background:yellowgreen; */
  border-radius:20rpx;
  position: relative;
  height:70rpx;
  /* 下三行均为文字正中央设置 */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 35rpx;
}

.main_content {
  /* background-color: red; */
  margin-top: 0rpx;
  margin-left: 30rpx;
  margin-right: 30rpx; 
  margin-bottom: 20rpx;
 }
 
/* 标题栏字体大小 */
 .font_main {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 38rpx;
 }
/* 普通字体 */
.font_normal {
  font-size: 35rpx;
}
 .font_highlight {
  font-size: 30rpx;
  color: #FFA155;
  margin-top: 5rpx;
 }
/* 设置边框 */
 .border_set {
  margin-top: 20rpx;
  border-bottom: 4rpx solid #BBBBBB;
 }

.right_block {
  position: absolute;
  right: 30rpx;
  /* background-color: blue; */
}

