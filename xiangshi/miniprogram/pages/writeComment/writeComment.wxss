.rate {
  margin-left: 30rpx;
  margin-right: 30rpx; 
  margin-bottom: 20rpx;
  height: 160rpx;
  border-radius: 30rpx;
  background-color: #FFE6D2;
  flex-direction: row;
}
/* 评论设置 */
.rates_set {
