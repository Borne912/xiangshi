/* 自定义输入弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #FFF2E8
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  background: #FFF2E8;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 40rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;

}
.modal-content {
  padding: 40rpx 32rpx;
}
.modal-input {
  display: flex;
  flex-direction: column;
  background:#FFE6D2;
  border: 2rpx solid #FFE6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  color: #333;
  text-align: center;
}
input-holder {
  color: #666;
  font-size: 28rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #FFA155;
  text-align: center;
}