/* 这是饮食推荐页 */
.bg_7 {
  background: #FFF2E8;
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:-1;
}

.date {
  margin-top: 20rpx;
  height: 100rpx;
  /* background-color: blue; */
  display: flex;
  flex-direction: row;
  /* background-color: red; */
}
.today_text {
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  /* background-color: blanchedalmond; */
}
.today_real {
  width: 60%;
  margin-top: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
