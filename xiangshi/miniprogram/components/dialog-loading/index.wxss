.dialog-loading-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dialog-loading-wrap .dialog-loading-inner {
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10rpx;
  padding: 50rpx;
  box-sizing: border-box;
  max-width: 80%;
  min-width: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dialog-loading-wrap .dialog-loading-icon,
.dialog-loading-wrap .image {
  width: 80rpx;
  height: 80rpx;
}
.dialog-loading-wrap .dialog-loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
}
